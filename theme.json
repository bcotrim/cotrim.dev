{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "terminal-black",
					"color": "#11111b",
					"name": "Mocha Crust"
				},
				{
					"slug": "terminal-bg",
					"color": "#1e1e2e",
					"name": "Mocha Base"
				},
				{
					"slug": "terminal-green",
					"color": "#a6e3a1",
					"name": "Mocha Green"
				},
				{
					"slug": "terminal-amber",
					"color": "#fab387",
					"name": "Mocha Peach"
				},
				{
					"slug": "terminal-gray",
					"color": "#585b70",
					"name": "Mocha Surface 2"
				},
				{
					"slug": "terminal-white",
					"color": "#cdd6f4",
					"name": "Mocha Text"
				},
				{
					"slug": "terminal-cyan",
					"color": "#89dceb",
					"name": "Mocha Sky"
				},
				{
					"slug": "terminal-red",
					"color": "#f38ba8",
					"name": "Mocha Red"
				}
			],
			"gradients": [],
			"duotone": [],
			"defaultGradients": false,
			"defaultPalette": false,
			"defaultDuotone": false,
			"custom": true,
			"customGradient": false
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'JetBrains Mono', 'Fira Code', 'Consolas', 'Monaco', 'Courier New', monospace",
					"slug": "terminal-mono",
					"name": "Terminal Mono"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.875rem",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "1rem",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "1.25rem",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "1.5rem",
					"name": "Extra Large"
				},
				{
					"slug": "xx-large",
					"size": "2rem",
					"name": "2X Large"
				}
			],
			"customFontSize": true,
			"lineHeight": true,
			"dropCap": false
		},
		"spacing": {
			"units": ["px", "em", "rem", "vh", "vw", "%"],
			"padding": true,
			"margin": true,
			"blockGap": true,
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"slug": "30",
					"size": "0.5rem",
					"name": "1"
				},
				{
					"slug": "40",
					"size": "1rem",
					"name": "2"
				},
				{
					"slug": "50",
					"size": "1.5rem",
					"name": "3"
				},
				{
					"slug": "60",
					"size": "2rem",
					"name": "4"
				},
				{
					"slug": "70",
					"size": "3rem",
					"name": "5"
				},
				{
					"slug": "80",
					"size": "4rem",
					"name": "6"
				}
			]
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"border": {
			"radius": false,
			"color": true,
			"style": true,
			"width": true
		},
		"custom": {
			"terminal": {
				"scanlineOpacity": "0.03",
				"cursorBlink": "1s"
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--terminal-bg)",
			"text": "var(--wp--preset--color--terminal-green)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--terminal-mono)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--40)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--40)"
			},
			"blockGap": "var(--wp--preset--spacing--50)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--terminal-cyan)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--terminal-amber)"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--terminal-white)"
				},
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--terminal-green)",
					"text": "var(--wp--preset--color--terminal-black)"
				},
				"border": {
					"radius": "0"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--terminal-mono)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "700"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--terminal-amber)",
						"text": "var(--wp--preset--color--terminal-black)"
					}
				}
			}
		},
		"blocks": {
			"core/paragraph": {
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/post-title": {
				"color": {
					"text": "var(--wp--preset--color--terminal-amber)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700"
				}
			},
			"core/site-title": {
				"color": {
					"text": "var(--wp--preset--color--terminal-green)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "700",
					"textTransform": "uppercase"
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--terminal-black)",
					"text": "var(--wp--preset--color--terminal-amber)"
				},
				"border": {
					"color": "var(--wp--preset--color--terminal-gray)",
					"style": "solid",
					"width": "1px"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--terminal-gray)"
				},
				"border": {
					"width": "1px 0 0 0"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
